entrypoint = "app.py"  # MODIFIÉ ICI
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["mailutils", "ruff", "tree"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
# Si vous prévoyez de déployer, il est bon de mettre à jour ici aussi,
# bien que pour l'exécution locale, entrypoint soit le plus important.
run = ["python3", "app.py"] # MODIFIÉ ICI
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask App"

[[workflows.workflow]]
name = "Flask App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
